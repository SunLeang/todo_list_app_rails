<h1>Tasks</h1>

<%= form_with url: tasks_path, method: :get, local: true do %>
  <div class="form-group">
    <label for="sort_order">Sort by Status:</label>
    <select name="sort_order" id="sort_order" class="form-control">
      <option value="asc" <%= 'selected' if params[:sort_order] == 'asc' %>>Ascending</option>
      <option value="desc" <%= 'selected' if params[:sort_order] == 'desc' %>>Descending</option>
    </select>
  </div>
  <%= submit_tag 'Sort', class: 'btn btn-primary' %>
<% end %>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.category.name if task.category %></td>
        <td><%= task.status.humanize %></td>
        <td>
          <%= form_with url: toggle_is_completed_task_path(task), method: :patch, local: true do %>
            <div class="form-group">
              <%= label_tag "status_#{task.id}", 'Change Status:' %>
              <%= select_tag "status", options_for_select(Task.statuses.keys.map { |status| [status.humanize, status] }, task.status), class: 'form-control', onchange: "this.form.submit();" %>
            </div>
          <% end %>
          <%= link_to 'Show', task, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path, class: 'btn btn-success' %>