<h1 class="mb-4">Category Details</h1>

<div class="card">
  <div class="card-body">
    <p class="card-text">
      <strong>Name:</strong>
      <%= @category.name %>
    </p>

    <div class="mb-3">
      <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-primary' %>
      <%= link_to 'Back', categories_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>